<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.redcup.app"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity android:name=".activities.BracketAppActivity" android:label="@string/app_name">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>
        <activity android:name=".activities.CreateTournamentActivity" android:label="@string/app_name"></activity>
        <activity android:name=".activities.ParticipantManagerActivity" android:label="@string/app_name"></activity>
        <activity android:name=".activities.LoadTournamentActivity" android:label="@string/app_name"></activity>
        <activity android:name=".activities.NewParticipantActivity" android:label="@string/app_name" android:theme="@android:style/Theme.Dialog"></activity>
        <activity android:name=".activities.ParticipantSelectorActivity" android:label="@string/app_name"></activity>
        <activity android:name=".activities.TournamentParticipantsActivity" android:label="@string/app_name"></activity>
        <activity android:name=".activities.EditParticipantActivity" android:label="@string/app_name"></activity>
    </application>

</manifest>