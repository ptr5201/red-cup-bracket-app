<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/addParticipantButton"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="20dp"
        android:text="@string/tournamentParticipants_Add"
        android:onClick="addParticipant" />

    <Button
        android:id="@+id/startTournamentButton"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/addParticipantButton"
        android:layout_alignBottom="@+id/addParticipantButton"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="@string/tournamentParticipants_Start"
        android:onClick="startTournament" />

</RelativeLayout>