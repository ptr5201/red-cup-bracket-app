<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/createTournament"
        android:layout_width="match_parent"
        android:layout_height="54dip"
        android:layout_marginTop="@dimen/mainMenuButton_topMargin"
        android:onClick="switchActivityScreen"
        android:background="@android:drawable/list_selector_background" >

        <ImageView
            android:id="@+id/createTournamentImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:src="@drawable/create" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/createTournamentImage"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:text="@string/createTournament"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dip"
        android:background="#ffffff00"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:id="@+id/loadTournament"
        android:layout_width="match_parent"
        android:layout_height="54dip"
        android:layout_marginTop="@dimen/mainMenuButton_topMargin"
        android:background="@android:drawable/list_selector_background"
        android:onClick="switchActivityScreen" >

        <ImageView
            android:id="@+id/loadTournamentImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="42dp"
            android:src="@drawable/load" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/loadTournamentImage"
            android:layout_alignParentRight="true"
            android:layout_marginRight="29dp"
            android:text="@string/loadTournament"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dip"
        android:background="#ffffff00"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:id="@+id/pastTournaments"
        android:layout_width="match_parent"
        android:layout_height="54dip"
        android:layout_marginTop="@dimen/mainMenuButton_topMargin"
        android:background="@android:drawable/list_selector_background"
        android:onClick="switchActivityScreen" >

        <ImageView
            android:id="@+id/pastTournamentsImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:src="@drawable/past" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pastTournamentsImage"
            android:layout_alignParentRight="true"
            android:layout_marginRight="26dp"
            android:text="@string/pastTournaments"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dip"
        android:background="#ffffff00"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:id="@+id/participants"
        android:layout_width="match_parent"
        android:layout_height="54dip"
        android:layout_marginTop="@dimen/mainMenuButton_topMargin"
        android:onClick="switchActivityScreen"
        android:background="@android:drawable/list_selector_background" >

        <ImageView
            android:id="@+id/participantManagerImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:src="@drawable/participants" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/participantManagerImage"
            android:layout_marginLeft="36dp"
            android:layout_toRightOf="@+id/participantManagerImage"
            android:text="@string/participants"
            android:textAppearance="?android:attr/textAppearanceLarge" />
        
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="2dip"
        android:background="#ffffff00"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:id="@+id/help"
        android:layout_width="match_parent"
        android:layout_height="54dip"
        android:layout_marginTop="@dimen/mainMenuButton_topMargin"
        android:onClick="switchActivityScreen"
        android:background="@android:drawable/list_selector_background" >

        <ImageView
            android:id="@+id/helpImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="40dp"
            android:src="@drawable/help" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/helpImage"
            android:layout_marginLeft="37dp"
            android:layout_toRightOf="@+id/helpImage"
            android:text="@string/help"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

</LinearLayout>